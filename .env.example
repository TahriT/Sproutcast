# PlantVision Production Environment Configuration
# Copy this file to .env and customize for your deployment

# Docker Registry Configuration
IMAGE_REGISTRY=ghcr.io
GITHUB_REPOSITORY=tahrit/plantvision
IMAGE_TAG=latest

# Network Configuration
WEB_PORT=8001
MQTT_PORT=1883
MQTT_WS_PORT=9001

# MQTT Authentication
MQTT_USERNAME=plantvision
MQTT_PASSWORD=secure123

# Camera Configuration
CAMERA_ID=0
SCALE_PX_PER_CM=28.0

# Processing Configuration
PUBLISH_INTERVAL_MS=30000
THRESHOLD=100
DEBUG_MODE=false
LOG_LEVEL=INFO

# MQTT Topics
MQTT_TOPIC=plantvision/area/greenhouse/camera

# Storage Paths (absolute paths recommended for production)
DATA_PATH=/opt/plantvision/data
MODEL_CACHE_PATH=/opt/plantvision/models
LOGS_PATH=/opt/plantvision/logs

# GPU Configuration (optional)
CUDA_DEVICES=0

# Monitoring Configuration
WATCHTOWER_ENABLE=true
HEALTH_CHECK_INTERVAL=30